alias ll='ls -l'
alias la='ls -lA'
alias l='ls -CF'

alias aptsearch='sudo PAGER=cat apt search --names-only'

alias sshno='ssh -o StrictHostKeychecking=no'
alias scpno='scp -o StrictHostKeychecking=no'

alias gitpullsync='git --git-dir=~/sync/.git pull --rebase'
alias gitpullsetup='git --git-dir=~/clones/setup/.git pull --rebase'

alias pipreq='pip install -r requirements.txt'
alias venvcreate='python3 -m venv venv'
alias .venvcreate='python3 -m venv .venv'
alias venventer='. ./venv/bin/activate'
alias .venventer='. ./.venv/bin/activate'
alias venvreq='venv-create && venv-enter && pip-req'
alias .venvreq='.venv-create && .venv-enter && pip-req'

alias dockerrmall='docker rm -f $(docker ps -aq)'
alias dockerrmiall='docker rmi $(docker images -aq)'

alias qmkcompile='qmk compile -kb ferris/sweep -km 3x5'
alias qmkflash='qmk flash -kb ferris/sweep -km 3x5'

alias kdbxclip='keepassxc-cli clip ~/secrets/all.kdbx'
alias acloudpass='kdbx-clip "acloud services"'
alias acloudtotp='acloud-pass --totp'
alias vpnpass='kdbx-clip "acloud vpn"'
alias vpntotp='vpn-pass --totp'

alias kdbxshowuser='keepassxc-cli show -a username ~/secrets/all.kdbx'
alias kdbxshowpass='keepassxc-cli show -sa password ~/secrets/all.kdbx'
alias kdbxshowtotp='keepassxc-cli show --totp ~/secrets/all.kdbx'
alias vpnshowuser='kdbx-show-user "acloud vpn"'
alias vpnshowpass='kdbx-show-pass "acloud vpn"'
alias vpnshowtotp='kdbx-show-totp "acloud vpn"'
alias ispshowuser='kdbx-show-user "ispras services"'
alias ispshowpass='kdbx-show-pass "ispras services"'

alias vpnenable='
_p=""; read -s -p "[acloud vpn] password for $(whoami): " _p; echo;
echo -e "$(echo $_p | vpn-show-user -q)\n$(echo $_p | vpn-show-pass -q)\n$(echo $_p | vpn-show-totp -q)" | \
sudo openvpn3 session-start --config ~/secrets/acloud.ovpn
'
alias vpndisable='sudo openvpn3 session-manage --config ~/secrets/acloud.ovpn --disconnect'

alias ispenable='
_p=""; read -s -p "[ispras vpn] password for $(whoami): " _p; echo;
echo -e "$(echo $_p | isp-show-user -q)\n$(echo $_p | isp-show-pass -q)" | \
sudo openvpn3 session-start --config ~/secrets/aviator.ovpn
'
alias ispdisable='sudo openvpn3 session-manage --config ~/secrets/aviator.ovpn --disconnect'

alias michmanlaunch='michman_dummy_dev down --remove-orphans && michman_dummy_dev build && michman_dummy_dev up -d --wait && michman_dummy_dev logs -f preload && michman_dummy_dev logs -f orchestrator provider'
alias michmanlaunchmock='michman_dummy down --remove-orphans && michman_dummy build && michman_dummy up -d --wait && michman_dummy logs -f preload && michman_dummy logs -f orchestrator provider'
alias michmanlaunchkeycloak='michman_keycloak_dev down --remove-orphans && michman_keycloak_dev build && michman_keycloak_dev up -d --wait && michman_keycloak_dev logs -f preload && michman_keycloak_dev logs -f orchestrator provider'
alias michmanlaunchkeystone='michman_keystone_dev down --remove-orphans && michman_keystone_dev build && michman_keystone_dev up -d --wait && michman_keystone_dev logs -f preload && michman_keystone_dev logs -f orchestrator provider'
alias michmanlaunchtest='michman_dummy down --remove-orphans && michman_dummy build && michman_dummy up --abort-on-container-failure'
