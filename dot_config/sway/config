########################
# SYSTEM CONFIGURATION #
########################

include /etc/sway/config.d/*

########
# VARS #
########

set $mod Mod4
set $alt Mod1
set $home /home/popovms

# WM
set $term foot
set $menu fuzzel || pkill fuzzel
set $bar waybar
set $lock swaylock

# desktop
set $file-manager $term bash -ic y
set $text-editor $term bash -ic micro
set $browser google-chrome
set $messenger /opt/Telegram/Telegram
set $ide /opt/pycharm/bin/pycharm

# dropdown
set $ddterm-id dropdown-terminal
set $ddterm-show swaymsg '[app_id="$ddterm-id"] scratchpad show'
set $ddterm-launch $term --override=colors.alpha=1.0 --title=$ddterm-id --app-id=$ddterm-id
set $ddterm-resize resize set 100ppt 40ppt, move position 0 0

# controls
set $WOBSOCK_VOL $XDG_RUNTIME_DIR/wob_vol.sock
set $WOBSOCK_MIC $XDG_RUNTIME_DIR/wob_mic.sock
set $WOBSOCK_BRH $XDG_RUNTIME_DIR/wob_brh.sock

# autostart
set $nm-launch nm-applet --indicator
set $bl-launch blueman-applet
set $wob-vol-launch pkill -f $WOBSOCK_VOL; mkfifo $WOBSOCK_VOL; tail -f $WOBSOCK_VOL | wob --config $home/.config/wob/wob_vol.ini
set $wob-mic-launch pkill -f $WOBSOCK_MIC; mkfifo $WOBSOCK_MIC; tail -f $WOBSOCK_MIC | wob --config $home/.config/wob/wob_mic.ini
set $wob-brh-launch pkill -f $WOBSOCK_BRH; mkfifo $WOBSOCK_BRH; tail -f $WOBSOCK_BRH | wob --config $home/.config/wob/wob_brh.ini

# screen
set $screenshot grim -c - | wl-copy && dunstify --timeout 2000 "Screenshot copied to clipboard"
set $screenshot-area grim -g "$(slurp)" - | wl-copy && dunstify --timeout 2000 "Screenshot of area copied to clipboard"
set $screens-dir $home/pics
set $file-screenshot $screens-dir/$(date +"%d-%m-%Y-%H-%M-%S")-shot.png
set $file-screenshot-area $screens-dir/$(date +"%d-%m-%Y-%H-%M-%S")-shot-area.png
set $save-screenshot mkdir -p $screens-dir && grim -c $file-screenshot && dunstify --timeout 2000 "Screenshot saved to $file-screenshot"
set $save-screenshot-area mkdir -p $screens-dir && grim -g "$(slurp)" $file-screenshot-area && dunstify --timeout 2000 "Screenshot area saved to $file-screenshot-area"

#########################
# THEME AND PERIPHERALS #
#########################

include .default
include .local

#################
# WM APPEARANCE #
#################

# Colors : border bg text indicator child_border
client.focused          #$colours_fg_sub #$colours_bg_sub #$colours_fg #$colours_fg #$colours_fg_sub
client.focused_inactive #$colours_snd #$colours_bg_sub #$colours_fg_sub #$colours_fg_sub #$colours_snd
client.unfocused        #$colours_snd #$colours_bg #$colours_fg_sub #$colours_fg_sub #$colours_bg
client.urgent           #$colours_red_sub #$colours_bg #$colours_red_sub #$colours_snd #$colours_red_sub

default_border pixel 1
default_floating_border pixel 1

gaps inner $gaps
gaps outer 0

hide_edge_borders none
floating_modifier $mod normal
workspace_layout default
focus_follows_mouse no

font $font $font_size_sway
output * bg $bg fill

bar {
    swaybar_command $bar
}

###################
# APPS APPEARANCE #
###################

include apps/foot.conf
include apps/fuzzel.conf
include apps/waybar.conf
include apps/swaylock.conf
include apps/wob.conf
include apps/micro.conf
include apps/yazi.conf
include apps/gtk.conf

################
# KEY BINDINGS #
################

bindsym --to-code $mod+Return exec $term
bindsym --to-code $mod+d exec $menu

bindsym --to-code $mod+Shift+q kill
bindsym --to-code $mod+Shift+c reload
bindsym --to-code $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8

bindsym $mod+Control+Shift+Right move workspace to output right
bindsym $mod+Control+Shift+Left move workspace to output left
bindsym $mod+Control+Shift+Down move workspace to output down
bindsym $mod+Control+Shift+Up move workspace to output up

bindsym --to-code $mod+b splith
bindsym --to-code $mod+v splitv
bindsym --to-code $mod+s layout stacking
bindsym --to-code $mod+w layout tabbed
bindsym --to-code $mod+e layout toggle split

bindsym --to-code $mod+f fullscreen
bindsym --to-code $mod+a focus parent

bindsym $mod+Shift+space floating toggle
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

mode "resize" {
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym --to-code $mod+r mode "resize"

# WM
bindsym --to-code $mod+l exec $lock
bindsym --to-code $mod+Shift+o exec swaymsg bar mode invisible
bindsym --to-code $mod+Shift+p exec swaymsg bar mode dock

# desktop
bindsym --to-code $mod+Shift+f exec $file-manager
bindsym --to-code $mod+Shift+t exec $text-editor
bindsym --to-code $mod+Shift+b exec $browser
bindsym --to-code $mod+Shift+m exec $messenger
bindsym --to-code $mod+Shift+i exec $ide

# dropdown
bindsym --to-code $mod+Shift+d exec $ddterm-show || $ddterm-launch

# controls volume
bindsym XF86AudioRaiseVolume exec pamixer -i 5 && pamixer --get-volume > $WOBSOCK_VOL
bindsym XF86AudioLowerVolume exec pamixer -d 5 && pamixer --get-volume > $WOBSOCK_VOL
bindsym XF86AudioMute exec pamixer --toggle-mute && ( [ "$(pamixer --get-mute)" = "true" ] && echo 0 > $WOBSOCK_VOL ) || pamixer --get-volume > $WOBSOCK_VOL

# controls microphone
bindsym $alt+XF86AudioRaiseVolume exec pamixer --default-source --increase 5 && pamixer --default-source --get-volume > $WOBSOCK_MIC
bindsym $alt+XF86AudioLowerVolume exec pamixer --default-source --decrease 5 && pamixer --default-source --get-volume > $WOBSOCK_MIC
bindsym $alt+XF86AudioMute exec pamixer --default-source --toggle-mute && ( [ "$(pamixer --default-source --get-mute)" = "true" ] && echo 0 > $WOBSOCK_MIC ) || pamixer --default-source --get-volume > $WOBSOCK_MIC

# controls brightness
bindsym XF86MonBrightnessUp exec brightnessctl s 5%+ | sed -En 's/.*\(([0-9]+)%\).*/\1/p' > $WOBSOCK_BRH
bindsym XF86MonBrightnessDown exec brightnessctl s 5%- | sed -En 's/.*\(([0-9]+)%\).*/\1/p' > $WOBSOCK_BRH

# screen
bindsym Print exec $screenshot-area
bindsym Shift+Print exec $save-screenshot-area
bindsym $mod+Print exec $screenshot
bindsym $mod+Shift+Print exec $save-screenshot

####################
# WINDOW OVERRIDES #
####################

for_window [class=".*"] inhibit_idle fullscreen
for_window [app_id=".*"] inhibit_idle fullscreen
for_window [app_id="^nm-connection-editor$"] floating enable
for_window [app_id="^blueman-manager$"] floating enable
for_window [app_id="^pavucontrol$"] floating enable
for_window [app_id="^thunar$"] floating enable
for_window [app_id="^xarchiver$"] floating enable
for_window [app_id="^foot$"] opacity 1.0

for_window [title="$ddterm-id"] {
  floating enable
  $ddterm-resize
  move to scratchpad
  scratchpad show
}

#############
# AUTOSTART #
#############

exec swayidle -w timeout 300 '$lock' timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' before-sleep '$lock'
exec gammastep -l 0:0 -m wayland -t 3800:3800
exec command -v openrgb && openrgb --profile Default

exec $nm-launch
exec $bl-launch
exec $wob-vol-launch
exec $wob-mic-launch
exec $wob-brh-launch

exec_always $nm-launch
exec_always $bl-launch
exec_always $wob-vol-launch
exec_always $wob-mic-launch
exec_always $wob-brh-launch
